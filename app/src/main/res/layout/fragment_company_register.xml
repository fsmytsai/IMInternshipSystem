<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.nutc.iminternshipsystem.CompanyRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include layout="@layout/top_section" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/registertitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_SchoolRegister"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounde"
                    android:onClick="GoSchoolRegister"
                    android:text="校內註冊"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_CompanyRegister"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounde2"
                    android:onClick="GoCompanyRegister"
                    android:text="企業註冊"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_Account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="統一編號"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_Password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="請輸入密碼"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_PasswordCheck"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="請輸入確認密碼"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="公司名稱"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_Phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="公司電話"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="信箱"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_Register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    android:text="註冊"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt_GoLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    android:onClick="GoLogin"
                    android:text="去登入"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
