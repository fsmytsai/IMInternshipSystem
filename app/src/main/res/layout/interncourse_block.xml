<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_InternCourseBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_CompanyImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/defaultmimg" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/atv_CompanyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="Jamie企業"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            autofit:minTextSize="5sp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/atv_CourseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="105學年暑期實習"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            autofit:minTextSize="5sp" />

        <ImageView
            android:id="@+id/iv_UpAndDown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/down" />

        <ProgressBar
            android:id="@+id/pb_Loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_JournalList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:translationZ="-1dp"
        android:visibility="gone"></LinearLayout>
</LinearLayout>