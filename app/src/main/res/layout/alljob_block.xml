<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_AllJobBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/roundedback"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_CompanyImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/defaultmimg" />

        <TextView
            android:id="@+id/tv_CompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX公司"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorMainYellow" />

    <TextView
        android:id="@+id/tv_JobType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="職務類型"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_JobDuty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="職務"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_JobCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="於...發布"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
</LinearLayout>