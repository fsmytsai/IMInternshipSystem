<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_SearchJob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittextback"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp"
            android:scrollHorizontally="true" />

        <ImageView
            android:id="@+id/iv_SearchJob"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@color/colorTransparent"
            app:srcCompat="@drawable/searchjob" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorMainYellow" />

    <LinearLayout
        android:id="@+id/ll_AllJobFilterTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@color/colorTransparent"
            app:srcCompat="@drawable/filter" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="篩        選"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_UpAndDown"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@color/colorTransparent"
            app:srcCompat="@drawable/up" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_AllJobFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:orientation="vertical"
        android:padding="10dp"
        android:translationZ="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_JobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/filterjob_textview_back"
                android:padding="5dp"
                android:text="職缺類型"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_SummerIntern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="暑期實習"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_SemesterIntern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="學期實習"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_WorkStudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="工讀"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_Career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="正職"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="時    間"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_NewToOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/filterjob_textview_back"
                android:padding="5dp"
                android:text="新到舊"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_OldToNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="舊到新"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_JobFilterSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/filterjob_textview_back"
                android:padding="5dp"
                android:text="薪    水"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_HighToLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="高到低"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_LowToHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="低到高"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>