<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ActivityOuter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.edu.nutc.iminternshipsystem.ResetPasswordActivity">

    <include layout="@layout/top_section" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/et_OldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="請輸入舊密碼"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_NewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="請輸入新密碼"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_NewPasswordCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="請重新輸入新密碼"
                android:inputType="textPassword" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-80dp"
        android:background="@color/colorTransparent"
        android:onClick="ResetPassword"
        app:srcCompat="@drawable/saveall" />

</LinearLayout>
